    public function edit(request $request,{{model_name}} ${{lcfirst}}) {
        if (!permissionCheck('{{route}}.update')) {
            return abort(403);
        }
        $PageTitle = __('Edit City');
        $ValidaionPath = '{{update_request}}';
        $Breadcrumb = [
            [
                'name'      =>  __('All {{model_name}}'),
                'route'     =>  '{{route}}.index',
            ],
            [
                'name'      =>  $PageTitle,
