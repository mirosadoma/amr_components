        ];
        $Button = [
            'title'         => __('Back To {{view}}'),
            'route'         =>  '{{route}}.index',
            'icon'          => 'arrow-left'
        ];
        $info  = ${{lcfirst}};
        $array = [
            'title'         => $PageTitle,
            'route'         => route('app.{{route}}.update',${{lcfirst}}->id),
            'method'        =>'PUT',
            'submit'        =>'Update',
            'type'          =>'update',
            'back_route'    => route('app.{{route}}.index')
        ];
        $data  = {{model_name}}::FORM_INPUTS();
        $data = array_merge($data,$array);
        return view('{{view}}_Dashboard::action',get_defined_vars());
